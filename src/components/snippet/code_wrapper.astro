---
import { Code } from 'astro:components'
import { read_lines_in_range } from '~/utils/files.ts'

const {

} = Astro.props

let code = await (Astro.slots.render('default'))
---
<Code defaultColor={false}
      themes={{
        light: 'min-light',
        dark: 'github-dark-default',
      }}
      lang={Astro.props.lang}
      code={code.trim().replace(/^<div[^>]*>|<\/div>$/g, '')}
/>